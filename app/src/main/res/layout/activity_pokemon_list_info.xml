<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeedf5"
    tools:context="com.seventeen.goradar.PokemonListInfoActivity">
    <RelativeLayout
        android:id="@+id/relative_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:background="#32a6ef">

        <Button
            android:id="@+id/backBtn"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:onClick="onBackButtonClick"
            android:layout_marginLeft="12dp"
            >
        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:text="Charizard"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:id="@+id/PokemonName"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/relative_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/relative_type"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="43.5dp"
                    android:paddingLeft="12dp"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:text="Type:"
                    android:gravity="left|center_vertical"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:id="@+id/tv_types"
                    android:layout_width="wrap_content"
                    android:layout_height="43.5dp"
                    android:paddingRight="12dp"
                    android:textColor="#888888"
                    android:textSize="15sp"
                    android:text="Fire/Flying"
                    android:gravity="right|center_vertical"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d9d9d9"/>
            <RelativeLayout
                android:id="@+id/relative_three"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="43.5dp"
                    android:paddingLeft="12dp"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:text="Hp:"
                    android:gravity="left|center_vertical"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:id="@+id/tv_hp"
                    android:layout_width="wrap_content"
                    android:layout_height="43.5dp"
                    android:paddingRight="12dp"
                    android:textColor="#888888"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:text="hp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d9d9d9"/>
            <RelativeLayout
                android:id="@+id/relative_four"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="43.5dp"
                    android:paddingLeft="12dp"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:text="Attack:"
                    android:gravity="left|center_vertical"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:id="@+id/tv_Attack"
                    android:layout_width="wrap_content"
                    android:layout_height="43.5dp"
                    android:paddingRight="12dp"
                    android:textColor="#888888"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d9d9d9"/>

            <RelativeLayout
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="43.5dp"
                    android:paddingLeft="12dp"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:text="Defense:"
                    android:gravity="left|center_vertical"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:id="@+id/tv_defense"
                    android:layout_width="wrap_content"
                    android:layout_height="43.5dp"
                    android:paddingRight="12dp"
                    android:textColor="#888888"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:text="Defense"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View
                android:id="@+id/lineEmber"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d9d9d9"/>

            <RelativeLayout
                android:id="@+id/relative_Dps"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="43.5dp"
                    android:paddingLeft="12dp"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:text="Sp_attack:"
                    android:gravity="left|center_vertical"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:id="@+id/tv_Sp_attack"
                    android:layout_width="wrap_content"
                    android:layout_height="43.5dp"
                    android:paddingRight="12dp"
                    android:textColor="#888888"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:text="Sp_attack"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View
                android:id="@+id/line_damage"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d9d9d9"/>


            <RelativeLayout
                android:id="@+id/relative_Damage"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="43.5dp"
                    android:paddingLeft="12dp"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:text="Sp_defense:"
                    android:gravity="left|center_vertical"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:id="@+id/tv_sp_defense"
                    android:layout_width="wrap_content"
                    android:layout_height="43.5dp"
                    android:paddingRight="12dp"
                    android:textColor="#888888"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:text="damage"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d9d9d9"/>
            <RelativeLayout
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="43.5dp"
                    android:paddingLeft="12dp"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:text="Speed:"
                    android:gravity="left|center_vertical"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:id="@+id/tv_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="43.5dp"
                    android:paddingRight="12dp"
                    android:textColor="#888888"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:text="dps"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d9d9d9"/>
            <RelativeLayout
                android:id="@+id/relative_two"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="43.5dp"
                    android:paddingLeft="12dp"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:text="Total:"
                    android:gravity="left|center_vertical"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="43.5dp"
                    android:paddingRight="12dp"
                    android:textColor="#888888"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:text="maccp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/activityLayout"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:hardwareAccelerated="true"
            android:background="#00000000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/bannerunit"/>
    </RelativeLayout>
</RelativeLayout>
